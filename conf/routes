# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                          controllers.Application.index
GET     /list/:scene               controllers.PromptController.list(scene: String)
GET     /edit                      controllers.PromptController.edit
POST    /edit                      controllers.PromptController.add
GET     /deleteScene/:scene        controllers.ScenesController.delete(scene: String)
#GET     /lines                     controllers.LinesController.lines
#POST    /lines                     controllers.LinesController.saveLines
GET     /register                  @controllers.UserController.index
POST    /register                  @controllers.UserController.register

GET     /scenes                    controllers.ScenesController.list
POST    /addScene                  controllers.ScenesController.addScene


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)

GET     /:index                    @controllers.PromptController.line(index: Int)
