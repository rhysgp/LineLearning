# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                          controllers.PromptController.index
GET     /list                      controllers.PromptController.list
GET     /edit                      controllers.PromptController.edit
POST    /edit                      controllers.PromptController.add
#GET     /lines                     controllers.LinesController.lines
#POST    /lines                     controllers.LinesController.saveLines
GET     /register                  @controllers.UserController.index
POST    /register                  @controllers.UserController.register

GET     /scenes                    controllers.ScenesController.list


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)

GET     /:index                    @controllers.PromptController.line(index: Int)
